<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 第一组item：设置边框 -->
    <item>
        <shape>
            <!-- 设置边框线宽度和颜色 -->
            <stroke
                android:width="0.5dp"
                android:color="#000000" >
            </stroke>
            <!-- 设置圆角度数 -->
            <corners android:radius="0dp" />
            <!-- 设置背景颜色 -->
            <solid android:color="#ffffff" />
            <!-- padding：设置边距 -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" >
            </padding>
        </shape>
    </item>

</layer-list>
